@using BookSource.Models.ViewModel
@model UserTestViewModel

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    var user = ViewBag.us as string;
}

@if (string.IsNullOrEmpty(user))
{
    <h1>LOGIN TEST</h1>
    <div class="form-control">
        <form asp-controller="Test" asp-action="Login" method="post" asp-antiforgery="true">
            <div class="form-group">
                <label asp-for="UserName">Username</label>
                <input asp-for="UserName" value="" />
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" />
            </div>

            <button type="submit" class="btn btn-primary">Login</button>
        </form>


        <h1>Register test</h1>
        <form asp-controller="Test" asp-action="Register" method="post" asp-antiforgery="true">
            <div class="form-group">
                <label asp-for="UserName">Username</label>
                <input asp-for="UserName" value="" />
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" />
            </div>

            <button type="submit" class="btn btn-primary">Login</button>
        </form>

    </div>
}
else
{
    <h1>Hola @user</h1>
}
<div>

</div>