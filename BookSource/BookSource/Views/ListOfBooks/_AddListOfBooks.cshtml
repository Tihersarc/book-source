<style>
    .popup {
        display: flex;
        position: fixed;
        justify-content: center;
        align-items: center;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.6);
        z-index: 1000;
        font-family: 'Georgia', serif;
    }

    .popup-content {
        position: relative;
        background-color: #fff;
        padding: 30px;
        border-radius: 16px;
        width: 400px;
        text-align: center;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
    }

    .popup-header {
        font-size: 1.8em;
        font-weight: bold;
        margin-bottom: 20px;
        color: #4B3832;
        border-bottom: 1px solid #ddd;
        padding-bottom: 10px;
    }

    .popup-body {
        text-align: left;
        font-size: 1em;
        color: #444;
        margin-bottom: 20px;
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

        .popup-body input[type="checkbox"] {
            appearance: none;
            -webkit-appearance: none;
            margin: 0;
            width: 20px;
            height: 20px;
            border: 2px solid #A68D82;
            border-radius: 4px;
            outline: none;
            cursor: pointer;
            transition: all 0.3s ease-in-out;
        }

            .popup-body input[type="checkbox"]:checked {
                background-color: #A68D82;
                border-color: #4B3832;
            }

        .popup-body label {
            display: flex;
            align-items: center;
            padding: 10px 15px;
            border-radius: 20px;
            background-color: #F5F5F5;
            transition: all 0.3s ease;
            cursor: pointer;
        }

            .popup-body label:hover {
                background-color: #ECE2D0;
                transform: translateX(4px);
            }

    .close {
        position: absolute;
        top: 10px;
        right: 15px;
        font-size: 1.5em;
        color: #A68D82;
        cursor: pointer;
        transition: color 0.3s ease;
    }

        .close:hover {
            color: #4B3832;
        }

    .btn-primary {
        background-color: #198754;
        border: none;
        padding: 12px 25px;
        font-size: 18px;
        border-radius: 25px;
        color: #fff;
        cursor: pointer;
        transition: all 0.3s ease;
        display: inline-block;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        text-transform: uppercase;
        position: relative;
        overflow: hidden;
    }

        .btn-primary::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(255, 255, 255, 0.2);
            transition: transform 0.3s ease;
            transform: scaleX(0);
            transform-origin: left;
        }

        .btn-primary:hover::before {
            transform: scaleX(1);
        }

        .btn-primary:hover {
            background-color: #145a32;
            transform: translateY(-2px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }
</style>

<script>
    function HidePartial() {
        document.getElementById('ViewPartial').style.display = 'none';
    }
    function AddNewList() {
      const listName =  document.getElementById('ListNameTextBox').value;

        if (listName == "") 
        { 
            alert("Inserte algun nombre");
            return;
        }
        $.ajax({
            url: '@Url.Action("AddListOfBooks", "ListOfBooks")',
            type: 'POST',
            data: {
                nameList : listName,
                    },
            success: function () {
                HidePartial();
            },
            error: function () {
                alert('Hubo un error al ejecutar la función.');
            }

        });

    }

</script>
<div id="ViewPartial" class="modal popup">
    <div class="modal-content popup-content">
        <div class="modal-header popup-header">
            Nueva Lista
            <button class="btn-close close" onclick="HidePartial()"></button>
        </div>
        <div class="modal-body popup-body">
            <input id="ListNameTextBox" type="text" placeholder="Elige un nombre">
        </div>
        <button class="btn btn-primary align-content-center" onclick="AddNewList()">Crear</button>
    </div>
</div>
