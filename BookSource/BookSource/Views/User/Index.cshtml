@using BookSource.Models.ViewModel
@using BookSource.Tools

@model UserViewModel
@{
    ViewData["Title"] = "User";
}
<style>
    .userLayout {
        width: 100%;
        display: grid;
        grid: "sidebar body" 1fr / 30% auto;
        gap: 8px;
    }

    .userSidebar {
        grid-area: sidebar;
    }

    .userBody {
        grid-area: body;
    }
    .userImg
    {
        width: 100%;
        height: 200px;
        object-fit: contain;
    }

    .square-container {
        aspect-ratio: 1;
        overflow: hidden;
        position: relative;
    }

    .square-container img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .config-button {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 50px;
        height: 50px;
        background-color: #007bff; /* Azul */
        border: none;
        border-radius: 50%; /* Forma circular */
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .config-button img {
            width: 24px;
            height: 24px;
        }

</style>
<div class="row">
    <div class="col-11">Perfil de @Model.UserName</div>
    <button class="config-button col">
        <img src=@Tools.ConfigImg alt="Configuración">
    </button>

</div>
<section class="userLayout">
    @if (Model!=null)
    {
        <div class="userSidebar">
            <div class="square-container border">
                <img class="img-fluid" src=@(Model.ProfileImageUrl??Tools.DefaultUserImg) alt="ImageNotFound" />
            </div>

            <div>Usuario: @Model.UserName</div>
            <div>Correo: @Model.Email</div>
            <div>Nacimiento: @(Model.Birthdate.HasValue ? Model.Birthdate : "Sin establecer")</div>
            <div>Seguidos</div>
            <div>Seguidores</div>
        </div>
        <div class="userBody">
            <div class="row">
                <div class="col">
                    <form method="get" asp-action="ChangeList" asp-controller="">
                        <select name="categoryId" class="form-select" onchange="this.form.submit()">
                            @if (Model.ListOfBooks != null)
                            {
                                @foreach (ListOfBooksViewModel listBooks in Model.ListOfBooks)
                                {
                                    if (Model.IdSelectedListOfBooks != null && listBooks.IdListOfBooks == Model.IdSelectedListOfBooks)
                                    {
                                        <option value="@listBooks.IdListOfBooks" selected>
                                            @listBooks.ListName
                                        </option>
                                    }
                                    else
                                    {
                                        <option value="@listBooks.IdListOfBooks">
                                            @listBooks.ListName
                                        </option>

                                    }
                                }

                            }
                        </select>
                    </form>

                </div>
            </div>
        </div>
    }
    else
    {
        <div>Usuario no encontrado</div>
    }
</section>