@using BookSource.Models.ViewModel
@model UserViewModel

@{
    ViewData["Title"] = "Follower";
}

<style>
    body {
        font-family: Georgia, 'Times New Roman', Times, serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
    }

    .container {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px;
        background-color: #fff;
        border: 1px solid #ccc;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .icon {
        font-size: 24px;
    }

    .title {
        font-size: 24px;
        font-weight: bold;
    }

    .info {
        text-align: right;
    }

    .section {
        background-color: #fff;
        border: 1px solid #ccc;
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 20px;
    }

    .sidebar, .body {
        color: black;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border: 1px solid #d7ccc8;
    }

    .sidebar {
        text-align: center;
    }

    h1, h2, p, ul li {
        color: black;
        font-family: Georgia, 'Times New Roman', Times, serif;
    }

    h1 {
        font-size: 28px;
        font-weight: bold;
        margin-bottom: 15px;
        text-align: center;
        border-bottom: 2px solid #d7ccc8;
        display: inline-block;
        padding-bottom: 10px;
    }

    h2 {
        font-size: 20px;
        margin-bottom: 20px;
    }

    p {
        font-size: 16px;
        margin-bottom: 15px;
        text-align: justify;
    }

    ul {
        padding-left: 30px;
        list-style-type: square;
        font-size: 16px;
        margin-bottom: 15px;
    }

    .follower-item {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
        padding: 10px;
        border: 1px solid #d7ccc8;
        border-radius: 8px;
        background: white;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .follower-item img {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            margin-right: 15px;
        }

    .follower-info {
        display: flex;
        flex-direction: column;
    }

    .follower-name {
        font-size: 16px;
        font-weight: bold;
    }

    .follower-details {
        display: flex;
        gap: 10px;
        font-size: 14px;
    }

    .follower-link {
        font-size: 14px;
        color: #007bff;
        text-decoration: none;
    }

        .follower-link:hover {
            text-decoration: underline;
        }
</style>

    <div class="layout">
        <div class="sidebar">
            @if (Model.FollowerList != null && Model.FollowerList.Any())
            {
                <ul>
                    @foreach (var follower in Model.FollowerList)
                    {
                        <li class="follower-item">
                            <img src="@follower.ProfileImageUrl" alt="@follower.UserName" />
                            <div class="follower-info">
                                <div class="follower-name">@follower.UserName</div>
                                <div class="follower-details">
                                    <span>Publicaciones</span>
                                    <span>Listas</span>
                                    <a asp-controller="User" asp-action="Profile" asp-route-username="@follower.UserName" class="follower-link">
                                        Ver perfil
                                    </a>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p>Este usuario no tiene seguidores.</p>
            }
        </div>
    </div>
</div>
